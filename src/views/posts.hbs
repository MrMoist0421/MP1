<link rel="stylesheet" href="/static/css/posts.css">

<div class="container">
    <!--Display posts table-->
    <div class="posts-table">
        <div class="table-head">
            <div class="status">Status</div>
            <div class="subjects">Subjects</div>
            <div class="replies">Replies/Views</div>
            <div class="last-reply">Last Reply</div>
        </div>
        {{#if posts}}
        {{#each posts}}
        {{> post this}}
        {{/each}}
        {{else}}
        <p> No posts to show...</p>
        {{/if}}
    </div>

    <div class="makepostcontainer">
        <div class="post">
            <button class="post-btn" onclick="showPost()">Make a Post</button>
            <button class="cancel-btn" onclick="removePost()">Cancel...</button>
        </div>
        <div class="post-area hide" id="post-area">
            <input type="text" id="title" placeholder="Title...">
            <textarea name="post" id="" placeholder="Insert text here... "></textarea>
            <input type="submit" value="submit" class="makepost-btn">
        </div>
    </div>
</div>
<script src="/static/js/main.js"></script>